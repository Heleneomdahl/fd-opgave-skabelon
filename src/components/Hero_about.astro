---
import { Image } from "astro:assets";
import HeroImage from "@assets/images/about_hero_pic.png";
---

<section>
  <Image src={HeroImage} alt="Hero" />
  <article>
    <div>
      <h4>ABOUT</h4>
      <h1>Creative Services For Boost Your Business Growth</h1>
    </div>
  </article>
</section>

<style>
  section {
    position: relative;
    grid-column: full;
    display: grid;
    grid-template-columns: subgrid;

    > * {
      grid-column: content;
      position: absolute;
      > * {
        margin-top: 25%;
        padding: var(--space-l);
        background-color: color-mix(in srgb, var(--primary-color) 80%, transparent);
        border-radius: 1.25rem;
        max-width: 700px;
      }
    }
    img {
      grid-column: full;
      width: 100%;
      height: auto;
      display: block;
    }

    h4 {
      background-color: var(--accent-color);
      display: inline-block;
      border-radius: 1.25rem;
      padding-left: var(--space-xs);
      padding-right: var(--space-xs);
    }
  }
</style>
